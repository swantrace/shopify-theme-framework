<div class="form-horizontal">
  <label for="SortBy">{{ 'collections.sorting.title' | t }}</label>
  <select name="sort_by" id="SortBy"  @change=${onSortByChanged} class="btn--tertiary" aria-describedby="a11y-refresh-page-message">
  ${sort_options && sort_options.length && sort_options.map(option => {
    return html`<option value=${option.value} ?selected=${sort_by === option.value }>${option.name}</option>`
  })}
  </select>
</div>
